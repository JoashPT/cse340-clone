<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<form class="accountForm" action="/account/login" method="post" target="_self">
    <fieldset>
        <label for="account_email">Email:</label>
        <input type="email" id="email" name="account_email" value="<%= locals.account_email %>" required>
        <label for="account_password">Password:</label>
        <input type="password" id="password" name="account_password" required>
        <input type="submit" value="login">
    </fieldset>
    <p>No account? 
        <a href="/account/register">Sign Up</a>
    </p>
</form>