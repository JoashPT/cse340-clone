<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<div class="columnFlow">
    <%- messages() %>
    
    <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
        </ul>
    <% } %>

    <form class="accountForm" id="deleteForm" action="/inv/delete" method="post">
        <fieldset>
            <label for="inv_make">Make</label>
            <input type="text" id="inv_make" name="inv_make" <% if (locals.inv_make) { %> value="<%=locals.inv_make%>"<% }%> readonly>

            <label for="inv_model">Model</label>
            <input type="text" id="inv_model" name="inv_model" <% if (locals.inv_model) { %> value="<%=locals.inv_model%>" <% } %>  readonly>

            <label for="inv_year">Year</label>
            <input type="text" id="inv_year" name="inv_year" <% if (locals.inv_year) { %> value="<%=locals.inv_year%>" <% } %>  readonly>

            <label for="inv_price">Price</label>
            <input type="text" id="inv_price" name="inv_price" <% if (locals.inv_price) { %> value="<%=locals.inv_price%>" <% } %> readonly>

            <p>Confirm Deletion - The delete is permanent.</p>
            <input type="submit" name="submit" id="delBtn" value="Delete Vehicle">
            
            <input type="hidden" name="inv_id"
            <% if (locals.inv_id) { %> value="<%=locals.inv_id%>"
            <% } %>>
        </fieldset>
    </form>
</div>
